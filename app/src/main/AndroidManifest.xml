<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomogoma.shoppinglistapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".items.list.AllItemsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity
			android:name=".items.add.AddItemActivity"
			android:label="@string/title_activity_add_item" >
		</activity>

        <provider
            android:name=".data.ShoppingListProvider"
            android:authorities="com.tomogoma.shoppinglistapp" />
    </application>

</manifest>
